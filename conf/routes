# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                    controllers.UnifiController.index()
POST        /wifi                controllers.UnifiController.wifi()
POST        /reset               controllers.UnifiController.reset()

GET         /login               controllers.UnifiController.login()
GET         /authenticate        controllers.UnifiController.authenticate(code: String, id_token: String, access_token: String)
GET         /logout              controllers.UnifiController.logout()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
